@model Core.Models.BoardViewwModel
@{
    ViewBag.Title = "تغيير معلومات اللجنة";
}
<div id="wrapper" style="margin-right:18px; margin-top:40px;">
    <h2 class="col-lg-10" style="color: #bba20b; margin-inline: -41px;"><span class="material-symbols-outlined">check_box_outline_blank</span><b>تغيير معلومات لجنة </b></h2>
    <div class="ibox-content" style="margin-left:50px;margin-right:185px ;margin-bottom: 7%;">
        <h3 style="color: #406847; margin-right: 4px; ">
            <span class="material-symbols-outlined"
                  style="font-size: 18px;margin-right: 7px;">feed</span> معلومات اللجنة
        </h3>

        <form method="post">
            <input type="hidden" asp-for="boardId" />
            <div class="row">
                <div class="col-lg-6">
                    <input type="hidden" id="BoardId" name="BoardId" value="@Model.boardId" />
                    <div class="form-group" style="margin-right:-210px;">
                        <label>أسم اللجنة *:</label>
                        <input asp-for="boardName" value="@Model.boardName" name="boardName" id="boardName" type="text" required class="form-control required">
                    </div>
                    <div class="form-group" style="margin-right:-200px;">
                        <label>مدير اللجنة *:</label>
                        <select class="form-control m-b required" required name="userId" id="userId">
                            <option value=""> أختر مدير اللجنة</option>
                            @foreach (var user in ViewBag.Users as List<Core.Models.UserDropDownViewModel>)
                            {
                                if (Model.userId == user.id)
                                {
                                    <option value="@user.id" selected>@user.fullname</option>
                                }
                                else
                                {
                                    <option value="@user.id">@user.fullname</option>
                                }

                            }
                        </select>
                    </div>
                    @*<div class="form-group" style="margin-right:-210px;">
                            <label>أسم مدير اللجنة</label>
                            <input id="surname" name="surname" type="text" required class="form-control required">
                        </div>
                        <div class="form-group" style="margin-right:-210px;">
                            <label>تاريخ أنشاء اللجنة </label>
                            <input id="surname" name="surname" type="date" required class="form-control required">
                        </div>*@
                </div>
                <div class="col-lg-6">
                    @*<div class="form-group" style="margin-right:-200px;">
                            <label>بريد مدير اللجنة </label>
                            <input id="surname" name="surname" type="text" required class="form-control required">
                        </div>
                        <div class="form-group" style="margin-right:-200px;">
                            <label>رقم جوال مدير اللجنة </label>
                            <input id="address" name="address" type="text" required class="form-control">
                        </div>
                        <div class="form-group" style="margin-right:-200px;">
                            <label>الجنس</label>
                            <select class="form-control m-b required" required name="account">
                                <option>أختر</option>
                                <option>ذكر</option>
                                <option>أنثى</option>
                            </select>
                        </div>*@
                    <div class="form-group" style="margin-right:-200px;">
                        <label>الحالة *:</label>
                        <select class="form-control m-b required" name="boardIsActive" id="boardIsActive" required asp-for="boardIsActive">
                            <option value="">أختر</option>
                            @if (Model.boardIsActive)
                            {
                                <option value="true" selected>نشط</option>
                                <option value="false">غير نشط</option>
                            }
                            else
                            {
                                <option value="true">نشط</option>
                                <option value="false" selected>غير نشط</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <br>

            <a href="@Url.Action("Index","Board")" class="btn btn-primary" style="float:left ; margin-left:13px;"> <span class="bold">رجوع الى القائمة</span></a>
            <button title="Create new cluster" class="btn btn-primary" style="float:left ; margin-left:13px;"><i class="fa fa-save"></i> <span class="bold">حفظ</span></button>

        </form>
        <br>
    </div>
</div>

@section scripts{

    @if (ViewBag.Success != null)
    {
        if (ViewBag.Success)
        {
            <script>
                var x = document.getElementById("snackbar");
                // Add the "show" class to DIV
                x.className = "show";
                // After 3 seconds, remove the show class from DIV
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
            </script>
        }
        else
        {

            <script>

        var x = document.getElementById("snackbar");
        // Add the "show" class to DIV
        x.className = "show";
        // After 3 seconds, remove the show class from DIV
        setTimeout(function () {x.className = x.className.replace("show", ""); }, 3000);
            </script>
        }
    }
}