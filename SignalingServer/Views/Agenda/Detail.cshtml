@model IEnumerable<WebApplication5.Models.SpeakerViewModel>
@{
    ViewBag.Title = "الاجندات";
}

<div id="wrapper" style="margin-right:18px; margin-top:40px;">
    <h2 class="col-lg-10" style="color: #bba20b; margin-inline: -39px; margin-top: 3%;"><span class="material-symbols-outlined">check_box_outline_blank</span><b>الاجندات </b></h2>
    <div class="ibox-content" style="margin-left:50px;margin-right:185px ;margin-bottom: 7%;border: none;
    direction: rtl;" dir="ltr">
        @if (Model.Count() != 0)
        {
            foreach (var agenda in Model)
            {
                <div class="col-lg-12" style="padding-right: 0;padding: 10px;border: 1px solid;margin-bottom: 5px;">
                    <h3 style="color: #173654;"><i class="fa fa-arrow-circle-o-left"></i>  @agenda.subject</h3>
                    <div class="col-lg-12" style="
    padding-right: 5px;
    margin-top: 5px;
    padding:15px;
">
                        <label>المتحدث :@agenda.name</label>
                        <label>الوقت :@agenda.time</label>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12" style="padding-right: 0;padding: 10px;border: 1px solid;margin-bottom: 5px;text-align:center">
                <h3 style="color: #173654;"> لا توجد اجندات</h3>
            </div>
        }


    </div>
</div>
<div class="col-lg-12" style="margin-top:20px">
    <a href="@Url.Action("Index","Archives")" class="btn btn-primary btn-sm" style="float:left ; margin-left:13px;"> <span class="bold">رجوع الى القائمة</span></a>
</div>